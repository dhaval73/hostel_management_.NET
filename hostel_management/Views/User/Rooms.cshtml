
@{
    ViewData["Title"] = "Rooms";
    Layout = "_Layout";
}

<div class=" container px-44 bg-zinc-50">
    <div class="flex flex-col px-5 pt-12">
        <header class="self-center mt-14 text-4xl font-bold text-black whitespace-nowrap max-md:mt-10">Explore Our Rooms</header>
        <p class="mt-8 text-lg font-medium text-center text-neutral-500 max-md:max-w-full">Welcome to the RK Hostel Rooms – your haven within RK University campus. We offer a variety of comfortable and budget-friendly accommodation options to suit your needs. Whether you prefer a private space for focused study or a shared dorm for a social atmosphere, we have something for everyone.</p>
        <section class=" my-10 bg-zinc-300/30 rounded-[50px_0px] max-md:mt-10 max-md:max-w-full p-3 overflow-hidden">
            <div class="flex  max-md:flex-col max-md:gap-0 overflow-hidden rounded-[50px_0px]">
                <div class="flex flex-col w-6/12 max-md:ml-0 max-md:w-full"><img loading="lazy" src="https://5.imimg.com/data5/IT/UJ/GLADMIN-22574967/college-student-hostel-facilities-500x500.jpg" alt="4 Sharing Rooms" class="grow w-full aspect-[1.3] max-md:mt-3 max-md:max-w-full"></div>
                <div class="flex flex-col aspect-[1.3]  w-6/12 max-md:ml-0 max-md:w-full  ">
                    <div class="flex flex-col grow items-start px-14 py-12 w-full text-2xl text-white bg-zinc-800 border-neutral-400 max-md:px-5 max-md:mt-3 max-md:max-w-full">
                        <h3 class="text-3xl">4 Sharing Rooms</h3>
                        <p class="mt-7">Rs. 72000 / student</p>
                        <p class="mt-4 text-lg">Attached bathroom</p>
                        <p class="mt-4 text-lg">Study Desk</p>
                        <p class="mt-4 text-lg">Chair</p>
                    </div>
                </div>
            </div>
        </section>
        <section class=" my-10 bg-zinc-300/30 rounded-[0px_50px] max-md:mt-10 max-md:max-w-full p-3 overflow-hidden">
            <div class="flex  max-md:flex-col max-md:gap-0 overflow-hidden rounded-[0px_50px] flex-row-reverse">
                <div class="flex flex-col w-6/12 max-md:ml-0 max-md:w-full"><img loading="lazy" src="https://5.imimg.com/data5/IT/UJ/GLADMIN-22574967/college-student-hostel-facilities-500x500.jpg" alt="4 Sharing Rooms (AC Rooms)" class="grow w-full aspect-[1.3] max-md:mt-3 max-md:max-w-full"></div>
                <div class="flex flex-col aspect-[1.3]  w-6/12 max-md:ml-0 max-md:w-full  ">
                    <div class="flex flex-col grow items-start px-14 py-12 w-full text-2xl text-white bg-zinc-800 border-neutral-400 max-md:px-5 max-md:mt-3 max-md:max-w-full">
                        <h3 class="text-3xl">4 Sharing Rooms (AC Rooms)</h3>
                        <p class="mt-7">Rs. 82000 / student</p>
                        <p class="mt-4 text-lg">Attached bathroom</p>
                        <p class="mt-4 text-lg">Study Desk</p>
                        <p class="mt-4 text-lg">Chair</p>
                        <p class="mt-8 text-lg">Extra Rs 10 / per unit after 250 unit</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
